<!-- pages/toboo/toboo.wxml -->
<view class="container">
    <view class="large-size">
        <text class="p-my">我的体质是：</text>
        <text class="p-name">{{physicalInfo.name}}</text>
        <view class="both">
            <text class="p-jianyou">兼有</text>
            <text class="both-result">{{physicalInfo.both}}</text>
        </view>
    </view>
</view>
<van-collapse value="{{ active1 }}" data-key="active1" bind:change="onChange">
    <van-collapse-item title="{{ physicalInfo.means.question }}" icon="question">
        <view wx:for="{{physicalInfo.means.explain}}" wx:key="_id" class="content">
            {{(index+1)+'. '+item.content}}
        </view>
    </van-collapse-item>
    <van-collapse-item title="{{ physicalInfo.reason.question }}" icon="question">
        <view wx:for="{{physicalInfo.reason.explain}}" wx:key="_id" class="content">
            {{(index+1)+'. '+item.content}}
        </view>
    </van-collapse-item>
    <van-collapse-item title="{{ physicalInfo.bother.question }}" icon="question">
        <view wx:for="{{physicalInfo.bother.explain}}" wx:key="_id" class="content">
            {{(index+1)+'. '+item.content}}
        </view>
    </van-collapse-item>
    <van-collapse-item title="{{ physicalInfo.alert.question }}" icon="question">
        <view wx:for="{{physicalInfo.alert.explain}}" wx:key="_id" class="content">
            {{(index+1)+'. '+item.content}}
        </view>
    </van-collapse-item>
    <van-collapse-item title="{{ physicalInfo.improve.question }}" icon="question">
        <view wx:for="{{physicalInfo.improve.explain}}" wx:key="_id" class="content">
            <view wx:if="{{ item.question }}">
                <view>{{ '- ' + item.question }}</view>
                <view wx:for="{{item.solution}}" wx:key="id">{{ (index+1)+'.'+item.content }}</view>
            </view>
            <view wx:else>{{(index+1)+'. '+item.content}}</view>
        </view>
    </van-collapse-item>
</van-collapse>
<view class="btn_box">
    <view class='retest_btn' bindtap='reTest'>重新测试</view>
</view>