
<view class="container content-size">
    <!-- 数据返回的层级太深，可以修改简单一点，因为是详情只有一个 -->
    <view class="title-img">
        <image src="{{diseaseDetail.img}}" class="det-img"></image>
    </view>
    <view class="text-desc">
        <rich-text nodes="{{diseaseDetail.desc}}" ></rich-text>
    </view>
    
    <view class="title title-size">
        <image src="../../images/wenhao.png"></image>
         <text>形成原因？</text>
    </view>
     <view class="text-other">
        <rich-text nodes="{{diseaseDetail.reason}}"></rich-text>
     </view>
     <view class="title title-size">
         <image src="../../images/yisheng.png"></image>
         <text>何时就医？</text>
     </view>
     <view class="text-other">
        <rich-text nodes="{{diseaseDetail.doctor}}" ></rich-text>
     </view>

    <view class="title title-size">
        <image src="../../images/icon.png"></image>
        <text>生活建议？</text>
    </view>
    <view class="text-other">
        <rich-text nodes="{{diseaseDetail.suggest}}"></rich-text>
    </view>
    <view class="footer">
        <image src="../../images/yezi.png" class="det-img"></image>
    </view>
</view>
