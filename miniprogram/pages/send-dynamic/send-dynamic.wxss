.page{
  height: 100vh;
  background-color: #fff;
}
.box{
  padding: 30rpx 40rpx;
  border-top: #f0f0f0 1px solid;
  border-bottom: #f0f0f0 1px solid;
}
.intro {
  margin: 30px;
  text-align: center;
}

.img{
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.img image{
  width: 100%;
  height: 100%;
}

.text {
  width: 100%;
  min-height: 120rpx;
  font-size: 30rpx;
  padding: 10rpx;
}

.moment_img {
  width: 180rpx;
  height: 180rpx;
}

.image_content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.delete-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30px;
  font-size: 12px;
  color: #fff;
  background: rgba(0,0,0,.5);
  text-align: center;
  line-height: 30px;
}
.btn-release {
  width: 300rpx;
  height: 80rpx;
  color: #fff;
  background: linear-gradient(#FF6F00, #FF9100);
  border-radius: 40rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 80rpx;
  margin-top: 50rpx;
}