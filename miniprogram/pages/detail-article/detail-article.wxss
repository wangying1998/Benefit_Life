@import "/wxParse/wxParse.wxss";
.container{
    background-color: #FFF;
}
.art-title {
    color: #333333;
    padding-top: 30rpx 0;
    line-height: 1.5;
    font-weight: bold;
    font-size: 40rpx;
}
.all-art {
    display: flex;
    justify-content: space-between;
    width: 670rpx;
    margin: 10rpx 0 20rpx 0;
}
.look-count {
    color: #999;
    margin-right: 30rpx; 
}
.look-img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}
.art-date {
    color: #999;
}
.art-content {
    line-height: 1.8;
    color: rgb(79, 79, 79);
    text-indent: 2em;
}
.art-content view{
    margin: 20rpx 0;
}
.art-content image {
    width: 100%!important;
    display: block;
    border-radius: 14rpx;
    margin: 30rpx 0;
}
/* 点赞 */
.tip-like{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 200rpx;
}
.like_txt{
    color: orangered;
    margin-right: 15rpx;
    font-size: 26rpx;
}
.tip-like image {
    width: 45rpx;
    height: 45rpx;
}