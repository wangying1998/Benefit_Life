} */
/* 动态 */
.perInfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 670rpx;
  margin: 0 auto;
}
.perInfo .info {
  display: flex;
  align-items: center;
}
.dynamic-item {
  background-color: #fff;
  margin: 16rpx;
  padding: 16rpx;
  
}
.release-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.release-name {
  color: #333;
  font-size: 28rpx;
}
.release-date {
  color: #999;
  font-size: 24rpx;
}
.send {
  width: 35rpx;
  height: 35rpx;
}
.dynamic-copywriting {
  color: #333333;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 670rpx;
  margin: 0 auto;
  margin-top: 16rpx;
}
/* 动态图片 */
.content-img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx;
}
.content-img image{
  width: 210rpx;
  height: 210rpx;
  text-align: center;
  margin: 0 5rpx 0 0;
  border-radius: 14rpx;
}

/* 文章 */

.article-item {
  background-color: #fff;
  margin-bottom: 20rxp;
  text-align: left;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border: 1rpx solid #F1F1F1;
  align-items: center;
}
.art-text {
  line-height: 60rpx;
  padding: 0 20rpx;
  
}
.art-title{
  background-color: #fff;
  font-size: 26rpx;
}
.art-date {
  color: #999999;
  font-size: 22rpx;
}
.article-item image {
  width: 183rpx;
  height: 102rpx;
  border-radius: 14rpx;
  margin-right: 20rpx;
}