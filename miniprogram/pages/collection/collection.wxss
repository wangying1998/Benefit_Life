/*  tab */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 50rpx;
}
.swiper-tab-list {  
  font-size: 28rpx;
  display: inline-block;
  width: 30%;
  color: #777777;
}
.on { 
  color: #23A257;
  border-bottom: 3rpx solid #23A257;
}

.swiper-box { 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden;
}
/* .swiper-box view {
