
@import "../../wxParse/wxParse.wxss";
.container{
  background-color: #fff;
}

.header {
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
  margin: 50rpx auto;
}

.line {
  width: 6rpx;
  height: 30rpx;
  background: #299939;
}
.archives {
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
}
.archive-txt{
  margin-left: 15rpx;
  margin-right: 5rpx;
}
.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.look-txt {
  color: #299939;
  margin-right: 5rpx;

}
.detail {
  height: 26rpx;
  width: 26rpx;
}
image {
  width: 80rpx;
  height: 100rpx;
}
.slide-image {
  width: 100%;
  height: 300rpx;
}
.mid-box{
  background-color: #fff;
  border-top: #F1F1F1 1px solid;
}

.left-box {
  width: 400rpx;
  height: 250rpx;
  padding: 22rpx 45rpx;
  border-right: #F1F1F1 1px solid;
}
.date-flex{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.date-color{
  color: #888888;
}
.date {
  font-size: 50rpx;
  font-weight: bold;
}
.date-line{
  height: 60rpx;
  border-right: #000 1px solid;
}
.align-r{
  text-align: right;
  margin-right: 15rpx;
}
.mr-l-20{
  margin-left: 20rpx;
}
.suit-box{
  width: fit-content;
}
.suit{
  width: fit-content;
}
.suit-txt{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  background-color: #299939;
  color: #fff;
  padding: 10rpx;
}
.taboo-txt{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
  border: #888888 1px solid;
  border-radius: 50%;
}
.vertical-txt{
  margin-top: 10rpx;
}

.con-box{
  width: 350rpx;
  height: 125rpx;
  padding: 17rpx 30rpx;
}
.meal{
  border-bottom: #F1F1F1 1px solid;
}
.meal-con{
  margin-top: 15rpx;
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.meal-pic {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.title{
  color: #299939;
}
.living {
  border-top: 1px solid rgb(196, 196, 196);
}
/* 时令好文 */
.article{
  margin-bottom: 20rpx;
}
.article-item {
  background-color: #fff;
  border-top: 1rpx solid #F1F1F1;
  padding: 20rpx 30rpx;
}
.art-text {
  height: 120rpx;
  padding: 10rpx 0;
}
.art-title{
  background-color: #fff;
  font-size: 28rpx;
  line-height: 1.5;
  width: 470rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.art-date {
  color: #999999;
}
.article-item image {
  width: 200rpx;
  height: 120rpx;
}
