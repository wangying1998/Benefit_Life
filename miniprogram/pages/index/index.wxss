
@import "../../wxParse/wxParse.wxss";

page {
  background: #f5f5f5;
  font-size: 28rpx;
}

.header {
  /* margin: 90rpx 0 90rpx 50rpx; */
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  /* border-radius: 50%; */
  line-height: 450rpx;
  margin: 50rpx auto;

}

.header image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.container .content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

.archives {
  height: 80rpx;
  font-size: 12px;
  display: flex;
  align-items:center;
  justify-content: space-between;
  padding: 0 16rpx;
  background-color: #fff;
}
.archives .left {
  display: flex; 
  align-items:center;
}

.archives .left .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
}
.divLine {
  background: #23A257;
  height: 30rpx;
  width: 6rpx;
  margin-right: 16rpx;
}

.archives .right {
  color: #23A257;
  display: flex; 
  align-items:center;
}
.archives .right .detail {
  height: 25rpx;
  width: 25rpx;
}
image {
  width: 80rpx;
  height: 100rpx;
}
.slide-image {
  width: 100%;
  height: 300rpx;
}
.taboo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  font-size: 28rpx;
  /* height: 260rpx; */
  border-top: 1px solid rgba(196, 196, 196,0.6);
  background-color: #fff;
}

.calendar {
  width: 300rpx;
  display: flex;
  justify-content: space-between;
  border-right: 1px solid rgba(196, 196, 196,0.6);
  padding: 20rpx;
  height: 220rpx;
  
  
}
.lunar {
  writing-mode: vertical-lr;
  font-size: 24rpx;
  text-align: center;
}
.solar .big {
  font-size: 35rpx;
  text-align: center;
}
.solar .small {
  color: #888888;
  font-size: 25rpx;
}
.mod-text {
  writing-mode: vertical-lr;
}
.mod-text .suitable {
  display: flex;
}
.text-suitable {
  background-color: #23A257;
  width: 45rpx;
  height: 45rpx;
  border-radius: 100%;
  color: white;
  /* line-height: 45rpx; */
  text-align: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.text-diet {
  width: 45rpx;
  height: 45rpx;
  border: 1px solid #888;
  border-radius: 100%;
  color: #888;
  /* line-height: 45rpx; */
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.mod-text .diet {
  display: flex;
}
.other {
  width: 450rpx;
  /* border: 1px solid #23A257; */
}

.other-item {
  display: flex; 
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  
}
.other-item image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
}
.other-item .other-content {
  font-size: 26rpx;
}

.other-item .title{
  color: #23A257;
}
.living {
  border-top: 1px solid rgb(196, 196, 196);
}
/* 时令好文 */
.article {
  background-color: #fff;
  margin-top: 25rpx;
}
.article-title {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}
