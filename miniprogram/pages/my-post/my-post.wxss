page {
  font-size: 28rpx;
}
.square-list {
  background-color: #fff;
}
.tip {
  margin-left: 50rpx;
}
.tip image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}
.dynamic-item {
  /* background-color: #fff; */
  margin: 16rpx;
  padding: 16rpx;
  
}
.perInfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 670rpx;
  margin: 0 auto;
}
.perInfo .info {
  display: flex;
  align-items: center;
}
.release-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.release-name {
  color: #333;
  font-size: 28rpx;
}
.release-date {
  color: #999;
  font-size: 24rpx;
}
.send {
  width: 35rpx;
  height: 35rpx;
}
.dynamic-copywriting {
  color: #333333;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 670rpx;
  margin: 0 auto;
}
/* 动态图片 */
.content-img {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx;
}
.content-img image{
  width: 210rpx;
  height: 210rpx;
  text-align: center;
  margin: 0 5rpx 0 0;
  border-radius: 14rpx;
}
.opt-delete {
  /* width: 100rpx; */
  color: #999;
  font-size: 20rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.delete {
  margin-right: 20rpx;
}