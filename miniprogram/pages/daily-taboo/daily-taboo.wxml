<image src="../../images/bg2.png" class="bg_pic"/>
<view class="container">
      <view class="date title-size">
          <view class="date-day">{{ lunar.cDay>9 ? lunar.cDay : ('0'+lunar.cDay) }}</view>
          <view class="line-h">{{ lunar.cYear +'年'+ ( lunar.cMonth>9 ? lunar.cMonth : '0'+lunar.cMonth ) + '月' }}</view>
          <view class="line-h">{{ lunar.ncWeek }}</view>
          <view class="line-h">{{ lunar.gzYear + '年  ' + lunar.IMonthCn + ' ' +lunar.IDayCn }}</view>
      </view>
      <view class="suggest-content content-size">
        <view class="title fl-sta-cen">
          <view class="suit-txt fl-cen-cen">宜</view>
          <text class="suit-title title-size">{{should.title}}</text>
        </view>
        <view class="look-txt">{{should.detail}}</view>

        <view class="title fl-sta-cen">
          <view class="taboo-txt fl-cen-cen">忌</view>
          <view class="vertical-txt title-size">{{avoid.title}}</view>
        </view>
        <view class="look-txt">{{avoid.detail}}</view>
      </view>
</view>