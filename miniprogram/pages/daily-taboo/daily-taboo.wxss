.bg_pic{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
/* 日期 */
.date {
    margin: 0 auto;
    text-align: center;
}
.date-day {
    color: #299939;
    font-weight: 500;
    font-size: 90rpx;
    margin-top: 100rpx;
}
.line-h{
    line-height: 1.6;
}
.suggest-content {
    margin-top: 50rpx;
}
.title {
    display: flex;
}
.suit-txt {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background-color: #299939;
    color: #fff;
    margin-right: 15rpx;
}
.suit-title {
    color: #299939;
}
.taboo-txt {
    width: 50rpx;
    height: 50rpx;
    padding: 10rpx;
    border: #888888 1px solid;
    border-radius: 50%;
    margin-right: 15rpx;
    color: #888;
}
.vertical-txt {
    color: #888;
}

.look-txt {
    color: #333;
    margin: 25rpx 0;
    line-height: 1.8;
    padding-left: 60rpx;
}
